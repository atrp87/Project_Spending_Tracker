<div class="card text-center head-list d-flex align-items-center justify-content-center">
  <div class="card-body">
    <h4 class="card-title">Merchants</h4>
    <p class="card-text"><b>Create</b> or <b>Edit</b> Existing Merchants.</p>
    <a href="/merchant/new"" class="btn btn-success">Create New</a>
  </div>
</div>

<% for merchant in @merchants %>

<div class="container main-list second item text-center">  
  <ul class="list-group">  
    <li class="list-group-item shadow list-group-item-action">
      <a href="/merchant/<%= merchant.id %>"> <%= merchant.name %> </a>
    </li>    
  </ul>
</div> 

<% end %>